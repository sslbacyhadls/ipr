pipeline {
    agent {
        node {
        label 'maven'
        }
    }

    environment {
      VERSION = '0.0.1-SNAPSHOT'
    }

    stages {
        stage ('Get source code') {
            steps {
                git credentialsId: '21d4d238-46ac-4300-a7a7-b5ad76d3b839', url: 'https://github.com/sslbacyhadls/ipr'
            }
        }

        stage ('Build') {
            steps {
                dir ("demoRest"){
                sh 'mvn clean install'
                }
            }
        }

        stage ('Deploy to test'){
            steps {
                dir ("demoRest"){
                  sh "sshpass -p \"test\" scp -oStrictHostKeyChecking=no target/demoRest-*.war ssh_user@test_env:/tmp/"
                  sh "sshpass -p \"test\" ssh -t ssh_user@test_env  \"sudo mv /tmp/demoRest*.war //usr/local/tomcat/webapps/ && sudo JAVA_HOME=/opt/java/openjdk /usr/local/tomcat/bin/shutdown.sh && sudo JAVA_HOME=/opt/java/openjdk /usr/local/tomcat/bin/startup.sh\""
                }
            }
        }
    }
}
